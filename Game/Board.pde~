public class Board{
  private Dot[][] dots;
  private int score;
  public color[] colors;
    
  public Board(){
    colors = new color[5];
    colors[0] = color(#FF7575);
    colors[1] = color(#48D1CC);
    colors[2] = color(#9932CC);
    colors[3] = color(#FFD700);
    colors[4] = color(#000080);
      
  }
  
  public color randColor(){
     int a = (int) (5* Math.random());
     return colors[a];
  }

  public void clearDot(int xcor, int ycor){
     Dot temp = dots[xcor][ycor];
     while 
  }

  public void set(Dot d, int xcor, int ycor){
     dots[xcor][ycor] = d; 
  }     

//use add after you drop
  public void add(){
     for (a = 0; a < dots.length; a++){
       for (b= 0; b < dots[0].length; b++){
          if(dots[a][b] = null){
	     dots[a][b] = new Dot(randColor());
	  }else{b = b+dots[0].length;}
       }
     }
  }

 
}
